<header>
    <nav class="navbar navbar-expand-lg navbar-light">
        <div class="container-fluid">
            <a class="navbar-brand"  href="/"><img src="../../media/logo.png" alt="logo" /></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false"
                aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse justify-content-end" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="active nav_link" aria-current="page" href="/">Inicio</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav_link" href="/all">Mis empleos</a>
                    </li>
                    <li class="nav-item">
                        <a class=" nav_link" href="/nosotros">Nosotros</a>
                    </li>
                </ul>
                <form class="d-flex justify-content-center mb-3" role="search">
                    {{!-- <a id="toast" class="btn btn-outline-danger">Cerrar Sesion</a> --}}
                    <button class="btn btn-primary mx-3 fw-bold fs-5" type="button">{{name}}</button>
                    <button onclick="showAlert()" class="btn btn-outline-danger btnCerrar px-5" type="button">Cerrar
                        Sesion</button>
                </form>
            </div>
        </div>
        </div>
    </nav>
