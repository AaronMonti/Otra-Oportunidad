            <div class="ul_login">
               <span class="login_span">¿Sos empresa? Regístrate y publica</span>
               <div class="main_div">
                  <button><a
                        class="btn_login"
                        href="/auth/signin"
                     >Inicia sesión</a></button>
               </div>
            </div>
         </div>
      </div>
   </nav>
</header>
<main class="container-fluid mt-3">
   <h1 class="text-center m-5 title_nosotros">Listado de Empleos</h1>
   <div class="empleos">
      <section class="sectionOne">
         <h2 class="title_filtros">Filtros</h2>
         <div class="filtros">
            <button><a href="/all/caba">
                  CABA</a></button>
            <button><a href="/all/arg">
                  Argentina</a></button>
            <button><a href="/all/bsas">
                  Buenos Aires</a></button>
            <button><a href="/all/cord">
                  Córdoba</a></button>
            <button><a href="/all/alfasc">
                  A - Z</a></button>
            <button><a href="/all/alfdesc">
                  Z - A</a></button>
            <button><a href="/all/asc">
                  Mas Antiguos</a></button>
            <button><a href="/all/desc">
                  Mas Nuevos</a></button>
         </div>
      </section>
      <section>

         {{#each jobs}}
            <div class="card cardEmpleo text-center m-4">
               <div
                  class="card-header border-white fs-4 fw-semibold"
               >{{this.enterprise}}</div>
               <div class="card-body">
                  <h5 class="card-title fs-5 fw-semibold">{{this.title}}</h5>
                  <p class="card-text .text-light">
                     {{this.location}}</p>
                  <p class="card-text">{{this.description}}</p>
               </div>
               <a
                  class="btn btn-primary mt-4 mx-5 fw-bold"
                  href="/all/{{this._id}}"
               >Detalles</a>
               <div id="hora" class="card-footer text-muted">
                  {{this.createdAt}}
               </div>
            </div>
         {{/each}}
      </section>
   </div>
</main>
