</header>
<main class="container-fluid mt-3">
   <h1 class="text-center m-5 title_nosotros">Listado de Empleos</h1>
   <div class="empleos">
      <section class="sectionOne">
            <h2 class="title_filtros">Filtros</h2>
         <div class="filtros">
            <button><a href="/all">
            Argentina</a></button>
            <button><a href="/all">
            Buenos Aires</a></button>
            <button><a href="/all">
            Cordoba</a></button>
            <button><a href="/all">
            Mendoza</a></button>
            <button><a href="/all">
            Rosario</a></button>
            <button><a href="/all">
            Santa Fe</a></button>
            <button><a href="/all">
            Salta</a></button>
            <button><a href="/all">
            Tucumán</a></button>
         </div>
      </section>
      <section>

         {{#each jobs}}
            <div class="card cardEmpleo text-center m-4">
               <div
                  class="card-header border-white fs-4 fw-semibold"
               >{{this.enterprise}}</div>
               <div class="card-body">
                  <h5 class="card-title fs-5 fw-semibold">{{this.title}}</h5>
                  <p class="card-text"><svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 384 512"
                        class="svg"
                     ><path
                           d="M215.7 499.2C267 435 384 279.4 384 192C384 86 298 0 192 0S0 86 0 192c0 87.4 117 243 168.3 307.2c12.3 15.3 35.1 15.3 47.4 0zM192 256c-35.3 0-64-28.7-64-64s28.7-64 64-64s64 28.7 64 64s-28.7 64-64 64z"
                        ></path></svg>
                     {{this.location}}</p>
                  <p class="card-text">{{this.description}}</p>
               </div>
               <a
                  class="btn btn-success mt-4 mx-5"
                  href="/all/{{this._id}}"
               >Detalles</a>
               <div id="hora" class="card-footer text-muted">
                  {{this.createdAt}}
               </div>
            </div>
         {{/each}}
      </section>
   </div>
</main>
