<header>
   <img src="/media/logo_1.png" alt="logo" />
   <nav>
      <ul>
         <li><a href="/">Home</a></li>
         <li><a href="/all">Empleos</a></li>
         <li><a href="#">Contacto</a></li>
         <li>Sos empresa? Registrate y publica</li>
      </ul>
      <ul>

         <li><a class="btn_login" href="/auth/signin">Login</a></li>
         <li><a class="btn_login" href="/auth/signup">Registrarse</a></li>
      </ul>
   </nav>
</header>
<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
   <symbol id="exclamation-triangle-fill" viewBox="0 0 16 16">
      <path
         d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"
      ></path>
   </symbol>
</svg>
<div class="container text-center">
   <div class="row">
      <div class="col me-5">
         <h1 class="mt-3">Registrate</h1>
         {{#if todo_error}}
            <div
               class="alert alert-danger d-flex align-items-center"
               role="alert"
            >
               <svg
                  class="bi flex-shrink-0 me-2"
                  role="img"
                  aria-label="Danger:"
               ><use xlink:href="#exclamation-triangle-fill"></use></svg>
               <div>

                  {{todo_error}}

               </div>
            </div>
         {{/if}}

         <form action="/auth/signup" method="POST">

            {{! Nombre }}

            <div class="mb-3">
               <label for="name" class="form-label">Nombre</label>
               <input
                  type="text"
                  class="form-control"
                  id="name"
                  name="name"
                  placeholder="Ingrese su nombre"
               />
            </div>

            {{! Correo }}

            <div class="mb-3">
               <label for="email" class="form-label">Correo electronico</label>
               <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Ingrese su correo"
               />
            </div>

            {{! Password }}

            <div class="mb-3">
               <label for="password" class="form-label">Contraseña</label>
               <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Ingrese su contraseña"
               />
            </div>

            {{! Reingresar Password }}

            <div class="mb-3">
               <label for="confirm_password" class="form-label">Reingrese su
                  password</label>
               <input
                  type="password"
                  class="form-control"
                  id="confirm_password"
                  name="confirm_password"
                  placeholder="Reingrese su contraseña"
               />
            </div>

            <button class="btn btn-success">
               Signup
            </button>

         </form>
      </div>

      {{! LOGIN }}

      <div class="col">
         <h1 class="mt-3">Inicia Sesion</h1>
         <form action="/auth/signin" method="POST">

            {{! Correo }}

            <div class="mb-3">
               <label for="email" class="form-label">Correo electronico</label>
               <input
                  type="email"
                  class="form-control"
                  id="email"
                  name="email"
                  placeholder="Ingrese su correo"
               />
            </div>

            {{! Password }}

            <div class="mb-3">
               <label for="password" class="form-label">Contraseña</label>
               <input
                  type="password"
                  class="form-control"
                  id="password"
                  name="password"
                  placeholder="Ingrese su contraseña"
               />
            </div>

            <button class="btn btn-warning">
               Signin
            </button>

         </form>
      </div>
   </div>
</div>