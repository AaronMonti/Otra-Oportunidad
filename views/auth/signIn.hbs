<header>
    <img src="/media/logo_1.png" alt="logo" />
    <nav>
        <ul>
            <li><a href="/">Home</a></li>
            <li><a href="/all">Empleos</a></li>
            <li><a href="#">Contacto</a></li>
            <li>Sos empresa? Registrate y publica</li>
        </ul>
        <ul>

            <li><a class="btn_login" href="/auth/signin">Login</a></li>
            <li><a class="btn_login" href="/auth/signup">Registrarse</a></li>
        </ul>
    </nav>
</header>
<div class="container text-center">
    <div class="row">
        <div class="col me-5">
            <h1 class="mt-3">Registrate</h1>

            <form action="/auth/signup" method="POST">

                {{!-- Nombre --}}

                <div class="mb-3">
                    <label for="name" class="form-label">Nombre</label>
                    <input type="text" class="form-control" id="name" name="name" placeholder="Ingrese su nombre">
                </div>

                {{!-- Correo --}}

                <div class="mb-3">
                    <label for="email" class="form-label">Correo electronico</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su correo">
                </div>

                {{!-- Password --}}

                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password"
                        placeholder="Ingrese su contraseña">
                </div>

                {{!-- Reingresar Password --}}

                <div class="mb-3">
                    <label for="confirm_password" class="form-label">Reingrese su password</label>
                    <input type="password" class="form-control" id="confirm_password" name="confirm_password"
                        placeholder="Reingrese su contraseña">
                </div>

                <button class="btn btn-success">
                    Signup
                </button>

            </form>
        </div>
        <div class="col">
            <h1 class="mt-3">Inicia Sesion</h1>
            <form action="/auth/signin" method="POST">

                {{! Correo }}

                <div class="mb-3">
                    <label for="email" class="form-label">Correo electronico</label>
                    <input type="email" class="form-control" id="email" name="email" placeholder="Ingrese su correo" />
                </div>

                {{! Password }}

                <div class="mb-3">
                    <label for="password" class="form-label">Contraseña</label>
                    <input type="password" class="form-control" id="password" name="password"
                        placeholder="Ingrese su contraseña" />
                </div>

                <button class="btn btn-warning">
                    Signin
                </button>

            </form>
        </div>
    </div>
</div>
